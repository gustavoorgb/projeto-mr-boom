{% extends 'layouts/base.html.twig' %}

{% block title %}Vincular Usuário à Loja
{% endblock %}

{% block breadcrumbs %}
	{% include 'components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Dashboard', path: path('app_admin') },
            { label: 'Lojas', path: path('app_store_index') },
            { label: store.corporateName, path: '' },
            { label: 'Vincular Usuário'},
        ]
    } %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Vincular Usuário à Loja</h1>
			<a href="{{ path('app_store_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
				<i class="fas fa-list fa-sm text-white-50"></i>
				Listar Lojas
			</a>
		</div>

		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Preencha os dados do vínculo para a loja "{{ store.corporateName }}"</h6>
			</div>
			<div class="card-body">
				{{ include('admin/store/_user_store_form.html.twig', {'button_label': 'Salvar Vínculo'}) }}
			</div>
		</div>
	</div>
{% endblock %}
