{{ form_start(form, {
    'attr': {'class': 'form-horizontal'},
    'action': path('app_store_link', {'id': store.id})
}) }}

<div class="row">
	<div class="col-md-6 mb-3">
		<div class="form-group">
			{{ form_label(form.user, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
			{{ form_widget(form.user, {'attr': {'class': 'form-control select2'}}) }}
			{{ form_errors(form.user) }}
		</div>
	</div>

	<div class="col-md-6 mb-3">
		<div class="form-group">
			{{ form_label(form.storeRole, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
			{{ form_widget(form.storeRole, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.storeRole) }}
		</div>
	</div>
</div>


<div class="row">
	<div class="col-12 my-2">
		<div class="card shadow">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">
					{{ form_label(form.permissions, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
				</h6>
			</div>
			<div class="card-body">
				{{ form_errors(form.permissions) }}
				<div class="row">
					{% for child in form.permissions %}
						<div class="col-md-4 col-sm-6 mb-2">
							<div class="form-check">
								{{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
								{{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>

<div class="d-flex justify-content-end mt-4">
	<button class="btn btn-primary shadow-sm">
		{{ button_label|default('Salvar') }}
	</button>
</div>

{{ form_end(form) }}
